<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#03A9F4"

            >

            <ImageView

                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="2dp"
                android:src="@drawable/control_tower"
                android:scaleType="fitXY"
                android:background="#03A9F4"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="RECAT Trainer"
                android:textSize="26dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#03A9F4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"



            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/plane"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Leader"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/leaderType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="A/C"
                    android:textColor="#000000"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/leader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="32dp" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="#969696" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/plane"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Follower"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/followerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="A/C"
                    android:textColor="#000000"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/follower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="32dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Score"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"


                android:gravity="center"
                android:padding="0dp"
                android:text="0 / 0"
                android:textColor="#000000"
                android:textSize="32dp" />



        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing3"
                    android:text="3"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing4"
                    android:text="4"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing5"
                    android:text="5"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing6"
                    android:text="6"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing7"
                    android:text="7"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"


                    android:layout_margin="16dp"

                    android:onClick="spacing8"
                    android:text="8"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_corner"
                    android:textSize="30dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
